<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    android:backgroundTint="@color/alice_blue"
    android:backgroundTintMode="multiply"
    tools:context=".phoneLogin">

    <TextView
        android:id="@+id/textViewReSendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Resend in 30 seconds"
        android:textAlignment="center"
        android:textColor="@color/cadet_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyButton"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="339dp"
        android:layout_height="52dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="#009688"
        android:drawableLeft="@drawable/baseline_ads_click_24"
        android:hapticFeedbackEnabled="true"
        android:includeFontPadding="false"
        android:paddingRight="55dp"
        android:text="VERIFY"
        android:textAlignment="center"
        android:textColor="@color/lavender_blush"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOtp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextOtp"
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:hint="######"
        android:includeFontPadding="true"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="25dp"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textColorHighlight="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="382dp"
        android:layout_height="176dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115"
        app:srcCompat="@drawable/otpsend" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Enter OTP sent to your mobile"
        android:textAlignment="center"
        android:textColor="@color/cadet_blue"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.065"
        tools:layout_editor_absoluteX="0dp" />

    <ProgressBar
        android:id="@+id/progressBarOtp"
        style="?android:attr/progressBarStyle"
        android:layout_width="51dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewReSendOtp"
        app:layout_constraintVertical_bias="0.216" />

</androidx.constraintlayout.widget.ConstraintLayout>
